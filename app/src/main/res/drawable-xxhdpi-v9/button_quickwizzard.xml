<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <gradient
                android:type="linear"
                android:centerX="46%"
                android:startColor="#FFABB9DE"
                android:centerColor="#FF757F98"
                android:endColor="#FF494F5E"
                android:angle="45"/>
        </shape>

    </item>
    <item android:gravity="center"
        >
        <bitmap android:src="@drawable/ic_wizard_48"
            android:gravity="fill_horizontal" />

    </item>

</layer-list>